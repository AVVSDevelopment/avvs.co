<footer id='contacts'>
    <div class='container'>
        <div class='row'>
            <div class='span6'>
                <h4 class='footer-caption'>Разделы сайта</h4>
                <ul class="nav inline">
                    {{~ it.links: link }}
                    <li><a href="{{= link.href }}">{{= link.name }}</a></li>
                    {{~}}
                </ul>
                <p class='copyright'>{{= it.copyright }}</p>
            </div>
            <div class='span6'>
                <h4 class='footer-caption'>Контакты</h4>
                <p>
                    тел: {{= it.phone }}
                </p>
                <p>
                    e-mail: <a href="mailto:{{= it.email}}">{{= it.email }}</a>
                </p>
                <address>
                    {{= it.address }}
                </address>
            </div>
        </div>
    </div>
</footer>