<nav id="pagination">
  {{? it.page.next }}
    <a href="{{= it.config.root }}{{= it.page.next_link }}" class="alignright next">← {{! this.i18n('prev') }}</a>
  {{?}}
  {{? it.page.next && it.page.prev }}
  &nbsp;&nbsp;
  {{?}}
  {{? it.page.prev }}
    <a href="{{= it.config.root }}{{= it.page.prev_link }}" class="alignleft prev">{{! this.i18n('next') }} →</a>
  {{?}}
  <div class="clearfix"></div>
</nav>
